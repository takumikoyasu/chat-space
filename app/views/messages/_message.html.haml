.messages{"data-message-id": "#{message.id}"}
  .message
    .message__user-name
      = message.user.name
    .message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-text
    - if message.content.present?
      %p.content
        = message.content
    = image_tag message.image.url, class: 'message-text__image' if message.image.present?
